@model List<Category>;
@{
    ViewBag.Title = "All Category";
}


<div class="container">

    <div class="row p-4">
        <div class="col-6">
            <h1 class="text-info">Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-info"> <i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>


    <table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th class="text-info">Category Id</th>
                <th class="text-info">Category Name</th>
                <th class="text-info">Display Order</th>
            </tr>
        </thead>
        <tbody >
            @foreach (var val in Model.OrderBy(e => e.DisplayOrder))
            {
                <tr>
                    <td>@val.Id</td>
                    <td>@val.Name</td>
                    <td>@val.DisplayOrder</td>
                </tr>

            }
        </tbody>
    </table>
</div>